{
	"name": "mytimeline",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"deploy": "npm run web:build && wrangler deploy",
		"dev": "npm run web:build && wrangler dev",
		"start": "wrangler dev",
		"bootstrap:x-cookies": "node scripts/bootstrap-x-cookies.mjs",
		"db:migrate:local": "wrangler d1 execute mytimeline --local --file db/schema.sql",
		"db:wipe:local": "wrangler d1 execute mytimeline --local --file db/wipe.sql",
		"web:dev": "npm --prefix web run dev",
		"web:build": "npm --prefix web run build",
		"test": "npm run test:unit",
		"test:unit": "vitest run test/src",
		"test:coverage": "vitest run --coverage test/src",
		"test:e2e": "node --env-file=.env ./node_modules/vitest/vitest.mjs run -c vitest.e2e.config.mts test/e2e.real.spec.ts",
		"test:e2e:business": "node --env-file=.env ./node_modules/vitest/vitest.mjs run -c vitest.e2e.config.mts test/e2e.business.inspect.spec.ts",
		"test:e2e:backfill": "node --env-file=.env ./node_modules/vitest/vitest.mjs run -c vitest.e2e.config.mts test/e2e.backfill.inspect.spec.ts",
		"test:e2e:scheduler": "node --env-file=.env ./node_modules/vitest/vitest.mjs run -c vitest.e2e.config.mts test/e2e.scheduler.inspect.spec.ts",
		"cf-typegen": "wrangler types"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.12.4",
		"@types/node": "^25.3.0",
		"@vitest/coverage-istanbul": "^3.2.4",
		"playwright": "^1.58.2",
		"typescript": "^5.5.2",
		"vitest": "~3.2.0",
		"wrangler": "^4.67.0"
	},
	"dependencies": {
		"@cloudflare/puppeteer": "^1.0.6",
		"agents": "^0.5.0"
	}
}
